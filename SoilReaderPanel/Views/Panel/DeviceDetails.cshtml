@model SoilReaderPanel.Models.DeviceViewModel

@{
    ViewData["Title"] = "DeviceDetails";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParticleDeviceID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticleDeviceID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeviceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeviceName)
        </dd>
    </dl>
    <div class="row">
        <ul>
            @foreach (var reading in Model.DeviceEvents)
            {
                <li>@reading.TIMESTAMP | @reading.data</li>
            }
        </ul>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
