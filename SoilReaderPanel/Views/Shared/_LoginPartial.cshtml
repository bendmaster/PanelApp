@using Microsoft.AspNetCore.Identity
@using SoilReaderPanel.Data
@using System.Security.Claims

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav navbar-right">
        @if (User.HasClaim(c => c.Type == "isAdmin"))
        {
            <li class="nav-link text-dark">
                <a asp-area="" asp-controller="Account" asp-action="Register" title="Register User" text-decoration="none">
                    <button class="btn btn-outline-primary navbar-btn navbar-link">Add User</button>
                </a>
            </li>
        }
        <li class="nav-link text-dark">
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                <button type="submit" class="btn btn-outline-warning navbar-btn navbar-link">Log out</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
        </li>
    </ul>
}
